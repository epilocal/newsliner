<article class="post-card {{#if post_large}}post-card-large{{/if}} {{#unless feature_image}}no-image{{/unless}}">

    {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}">
        {{!-- This is a responsive image, it loads different sizes depending on device
        https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
        <img class="post-card-image"
            srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="(max-width: 1000px) 400px, 700px"
            loading="lazy"
            src="{{img_url feature_image size="m"}}"
            alt="{{title}}"
        />
    </a>
    {{/if}}

    <div class="post-card-content">

        <a class="post-card-content-link" href="{{url}}">

            <header class="post-card-header">
                {{!-- Option to hide tags by providing hide_tag boolean --}}
                {{#unless hide_tag}}
                  {{#if primary_tag}}
                      {{#primary_tag}}
                      <div>
                        <span class="post-card-primary-tag">{{name}}</span>
                      </div>

                      {{/primary_tag}}
                  {{/if}}
                {{/unless}}
                <h2 class="post-card-title">{{title}}</h2>
            </header>

            <section class="post-card-excerpt">
                {{#if feature_image}}
                  {{!-- Longer excerpt for large post-cards --}}
                  {{#if post_large}}
                    <p>{{excerpt words="60"}}</p>
                  {{/if}}
                {{else}}
                    <p>{{excerpt words="44"}}</p>
                {{/if}}
            </section>



        <footer class="post-card-meta">
            <div class="post-card-byline-content">
                <span class="post-card-byline-date"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> <span class="bull">&bull;</span> {{reading_time}}</span>
            </div>
        </footer>

        </a>

    </div>{{!--/.post-card-content--}}

</article>
